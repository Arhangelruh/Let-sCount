{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "NLog": {
    "targets": {
      "file": {
        "type": "File",
        "fileName": "D:\\test\\logs\\app-${date:format=yyyy-MM-dd}.log",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file"
      }
    ]
  },
  "ConnectionStrings": {
    "LetUsCountDatabase": "Host=localhost;Port=some_port;Database=some_database;User Id=some_user;Password=some_password;Pooling=true"
  },
  "FolderSettings": {
    "FolderPath": "IN directory"
  },
  "MailSettings": {
    "SMTPServer": "Some address",
    "SMTPPort": "port",
    "SMTPLogin": "login",
    "SMTPPassword": "password",
    "Sender": "Email",
    "Receiver": [ "first receiver", "second receiver", "third receiver" ]
  },
  "ThreadsSettings": {
    "Threads": "4"
  }
}

